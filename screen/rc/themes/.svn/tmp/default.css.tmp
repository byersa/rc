body {
    margin: 0;
    padding: 0;
    overflow: hidden;
    font: 11.5px/14px 'Helvetica';
    color: #333;
    outline: none;
    background-color: #FCFCFC;
}

* {
    outline: none;
    -moz-outline-style: none;
    font-family: Helvetica, sans-serif;
}

::-moz-focus-inner {
    border: none;
}

:focus, :active, :hover {
    outline: none;
}

#welcomeScreenContainer {
    border: 4px solid #636363;
    background-color: #363837;
    overflow: hidden;

    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

#welcomeScreenContainer .logo {
    margin: 2px 0 2px 100px;
    background-image: url('images/logo.png');
    background-repeat:no-repeat;
    float: left;
    width: 80px;
    height: 64px;
}

#welcomeScreenContainer .userMenu {
    position: absolute;
    right:0;
    padding: 25px 20px 0 0;

    color: #FFF;
}

#welcomeScreenContainer .userMenu a {
    color: #FFF;
    text-decoration: none;
}

#welcomeScreenContainer .userMenu a:hover {
    text-decoration: underline;
}

.ccMainContainer-child {
    margin-top: 68px;
    background: #FFF;
}

#welcomeScreenContainer .textContainer {
    padding: 30px;
}

#welcomeScreenContainer .textContainer h1 {
    font: 42px/42px Tahoma;
    text-align: center;
}

#welcomeScreenContainer .textContainer p {
    font: 14px/20px Tahoma;
    text-align:justify;
}

#welcomeScreenContainer .innerContainer {
    padding: 1px;
    background: #cedce7; /* Old browsers */

    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    -khtml-border-radius: 5px;
    border-radius: 5px;
}

#welcomeScreenContainer .signInContainer h1 {
   font: 42px/42px Tahoma;
    text-align: center;
}

.signIn {
    background-color: #e1f0f7;
    margin-left: auto;
    margin-right: auto;
    -webkit-border-bottom-right-radius: 5px;
    -webkit-border-bottom-left-radius: 5px;
    -moz-border-radius-bottomright: 5px;
    -moz-border-radius-bottomleft: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
}

#signInMessBox, .formErrorMsg, #registerMessBox, #forgotPassMessBox{
    min-height: 22px;
    line-height: 22px;
    padding-bottom: 15px;
    background-color: #e1f0f7;
    -webkit-border-top-left-radius: 5px;
    -webkit-border-top-right-radius: 5px;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-topright: 5px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.signIn, .formErrorMsg, .formButtons {
    padding: 0 30px;
}

.signInContainer {
    margin: auto;
    width: 500px;
}

.signInContainer h1 {
    font-size: 48px;
    color: #363837;
}

.signIn .formRow {
    text-align: left;
    vertical-align: middle;
    overflow: auto;
    margin: 0 0 15px 0;
}

label {
    float:left;
    width: 100px;
    font: 12px/22px Tahoma bold;
}

label:after{
    content: ":";
    white-space: pre;
}

.inputBackgroud {
    background-color: #cee6f5;
    float: left;
    padding: 3px 3px 3px 3px;

    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    -khtml-border-radius: 5px;
    border-radius: 5px;
}

.inputBackgroud input {
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    -khtml-border-radius: 5px;
    border-radius: 5px;
}

.inputBackgroud a {
    color: #63b5c7;
}

.inputBackgroud a:hover {
    text-decoration: none;
}

.signInContainer .formButtons {
    text-align: right;
    padding: 0;
}

.signInContainer .formButtons a {
    text-decoration: none;
}

.signInContainer .formButtons .signInBtn a {
    border: 1px solid #c7c7c7;
    padding: 10px 10px 10px 10px;
    background-color: #f5f5f5;
    color: #525252;
    text-transform: uppercase;

    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;
}

.signInContainer .formButtons .signInBtn a:focus, .signInContainer .formButtons .signInBtn a:hover {
    background-color: #d7d7d7;
}

.signInContainer .formButtons .signInBtn a img {
    vertical-align: middle;
    margin-left: 10px;
    border: none;
}

.signInContainer .formButtons .signInBtn {
    margin: 20px 0 0 0;
}

.formErrorMsg {
    height: 33px;
    line-height: 33px;
    background-color: #FFFF99;
    text-align: left;
    color: #000000;
}