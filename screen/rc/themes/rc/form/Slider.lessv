/* Slider 
 * 
 * Styling Slider mainly includes styling the Slider progress bar (dijitSliderProgressBar)
 * 
 * Slider progress bar:
 * 1. Slider progress bar (default styling): 
 * 		.dijitSliderProgressBarH - progress bar at the middle of horizontal slider
 * 		.dijitSliderLeftBumper - bar at the left of horizontal slider
 * 		.dijitSliderRightBumper - bar at the right of horizontal slider
 * 		.dijitSliderProgressBarV - progress bar at the middle of vertical slider
 * 		.dijitSliderTopBumper - bar at the top of vertical slider
 * 		.dijitSliderBottomtBumper - bar at the bottom of vertical slider
 * 
 * 2. hovered Slider progress bar (ie, mouse hover on progress bar)
 * 		.dijitSliderHover .dijitSliderProgressBarH(horizontal) - hovered bar style: background, border
 * 
 * 3. focused Slider progress bar (ie, mouse focused on progress bar)
 * 		.dijitSliderFocused .dijitSliderProgressBarH(horizontal) - focus bar style: background, border
 * 
 * 4. disabled/read-only Slider progress bar 
 * 		.dijitSliderDisabled .dijitSliderProgressBarH(horizontal) - bar styles when slider is disabled
 * 
 * 
 * Slider Thumbs:
 * 1. Slider Thumbs (default styling): 
 * 		.dijitSliderImageHandleH / .dijitSliderImageHandleV - styles for the controller on the progress bar
 * 
 * 2. hovered Slider Thumbs (ie, mouse hover on slider thumbs)
 * 		.dijitSliderHover .dijitSliderImageHandleH - hovered controller style
 * 
 * 3. focused Slider progress bar (ie, mouse focused on slider thumbs)
 * 		.dijitSliderFocused .dijitSliderImageHandleV - focused controller style
 * 
 * 
 * Slider Increment/Decrement Buttons:
 * 1. Slider Increment/Decrement Buttons (default styling): 
 * 		.dijitSliderDecrementIconH - decrement icon which lies at the left of horizontal slider
 * 		.dijitSliderIncrementIconH - increment icon which lies at the right of horizontal slider
 * 		.dijitSliderDecrementIconV - decrement icon which lies at the bottom of vertical slider
 * 		.dijitSliderIncrementIconV - increment icon which lies at the top of vertical slider
 * 
 * 2. hovered Slider Increment/Decrement Buttons (mouse hover on the icons)
 * 		.dijitSliderHover .dijitSliderDecrementIconH - for background, border
 * 
 * 3. active Slider Increment/Decrement Buttons (mouse down on the icons)
 * 		.dijitSliderActive .dijitSliderIncrementIconV - for background, border
 * 
 * 4. disabled/read-only Slider Increment/Decrement Buttons
 * 		.dijitSliderDisabled .dijitSliderDecrementIconH - styles for the icons in disabled slider
 * 		.dijitSliderReadOnly .dijitSliderIncrementIconV - styles for the icons in read-only slider
 */

@import "../variables";

.dbizdemo .dijitSliderBar {
	border-style: solid;
	outline: 1px;
}
.dbizdemo .dijitSliderFocused .dijitSliderBar {
	border-color: @focused-border-color;
}
.dbizdemo .dijitSliderHover .dijitSliderBar {
	border-color: @hovered-border-color;
}
.dbizdemo .dijitSliderDisabled .dijitSliderBar {
	background-image: none;
	border-color: @disabled-border-color;
}
.dbizdemo .dijitRuleLabelsContainer {
	color: @text-color;
}

/* Horizontal Slider */

.dbizdemo .dijitRuleLabelsContainerH {
	padding: 2px 0;
}
.dbizdemo .dijitSlider .dijitSliderProgressBarH,
.dbizdemo .dijitSlider .dijitSliderLeftBumper{
	border-color: @border-color;
	background-color: @slider-fullbar-background-color;
	.alpha-white-gradient (top, 1,0px, 1,1px, 0,2px);
}
.dbizdemo .dijitSlider .dijitSliderRemainingBarH,
.dbizdemo .dijitSlider .dijitSliderRightBumper{
	border-color: @border-color;
	background-color: @slider-remainingbar-background-color;
}
.dbizdemo .dijitSliderRightBumper {
	border-right: solid 1px @border-color;
}
.dbizdemo .dijitSliderLeftBumper {
	border-left: solid 1px @border-color;
}
.dbizdemo .dijitSliderHover .dijitSliderProgressBarH,
.dbizdemo .dijitSliderHover .dijitSliderLeftBumper{
	background-color: @slider-hovered-fullbar-background-color;
	border-color: @hovered-border-color;
}
.dbizdemo .dijitSliderHover .dijitSliderRemainingBarH,
.dbizdemo .dijitSliderHover .dijitSliderRightBumper{
	background-color: @slider-hovered-remainingbar-background-color;
	border-color: @hovered-border-color;
}
.dbizdemo .dijitSliderFocused .dijitSliderProgressBarH,
.dbizdemo .dijitSliderFocused .dijitSliderLeftBumper{
	background-color: @slider-focused-fullbar-background-color;
	border-color: @focused-border-color;
	.box-shadow(inset 0px 1px 1px rgba(0, 0, 0, 0.2));
}
.dbizdemo .dijitSliderFocused .dijitSliderRemainingBarH,
.dbizdemo .dijitSliderFocused .dijitSliderRightBumper{
	background-color: @slider-focused-remainingbar-background-color;
	border-color: @focused-border-color;
	.box-shadow(inset 0px 1px 1px rgba(0, 0, 0, 0.2));
}
.dbizdemo .dijitSliderDisabled .dijitSliderProgressBarH,
.dbizdemo .dijitSliderDisabled .dijitSliderLeftBumper{
	background-color: @disabled-border-color;		/* left side of slider, fill matches border */
	background-image:none;
}
.dbizdemo .dijitSliderDisabled .dijitSliderRemainingBarH,
.dbizdemo .dijitSliderDisabled .dijitSliderRightBumper{
	background-color: @disabled-background-color;
}

/* Vertical Slider */

.dbizdemo .dijitRuleLabelsContainerV {
	padding: 0 2px;
}
.dbizdemo .dijitSlider .dijitSliderProgressBarV,
.dbizdemo .dijitSlider .dijitSliderBottomBumper{
	border-color: @border-color;
	background-color: @slider-fullbar-background-color;
	.alpha-white-gradient (left, 1,0px, 0,1px);
}
.dbizdemo .dijitSlider .dijitSliderRemainingBarV,
.dbizdemo .dijitSlider .dijitSliderTopBumper{
	border-color: @border-color;
	background-color: @slider-remainingbar-background-color;
}
.dbizdemo .dijitSliderBottomBumper {
	border-bottom: solid 1px @border-color;
}
.dbizdemo .dijitSliderTopBumper {
	border-top: solid 1px @border-color;
}
.dbizdemo .dijitSliderHover .dijitSliderProgressBarV,
.dbizdemo .dijitSliderHover .dijitSliderBottomBumper{
	background-color: @slider-hovered-fullbar-background-color;
	border-color: @hovered-border-color;
}
.dbizdemo .dijitSliderHover .dijitSliderRemainingBarV,
.dbizdemo .dijitSliderHover .dijitSliderTopBumper{
	background-color: @slider-hovered-remainingbar-background-color;
	border-color: @hovered-border-color;
}
.dbizdemo .dijitSliderFocused .dijitSliderProgressBarV,
.dbizdemo .dijitSliderFocused .dijitSliderBottomBumper{
	background-color: @slider-focused-fullbar-background-color;
	border-color: @focused-border-color;
	.box-shadow(inset 1px 0px 1px rgba(0, 0, 0, 0.2));
}
.dbizdemo .dijitSliderFocused .dijitSliderRemainingBarV,
.dbizdemo .dijitSliderFocused .dijitSliderTopBumper{
	background-color: @slider-focused-remainingbar-background-color;
	border-color: @focused-border-color;
	.box-shadow(inset 1px 0px 1px rgba(0, 0, 0, 0.2));
}
.dbizdemo .dijitSliderDisabled .dijitSliderProgressBarV,
.dbizdemo .dijitSliderDisabled .dijitSliderBottomBumper{
	background-color: @disabled-border-color;	/* bottom side of slider, fill matches border */
}
.dbizdemo .dijitSliderDisabled .dijitSliderRemainingBarV,
.dbizdemo .dijitSliderDisabled .dijitSliderTopBumper{
	background-color: @disabled-background-color;
}


/* ------- Thumbs ------- */

.dbizdemo .dijitSliderImageHandleH {
	border: 0;
	width: 18px;
	height: 16px;
	background-image: url("../@{image-form-slider-thumbs}");
	background-repeat:no-repeat;
	background-position:0 0;
}
.dbizdemo .dijitSliderHover .dijitSliderImageHandleH {
	background-position:-18px 0;
}
.dbizdemo .dijitSliderFocused .dijitSliderImageHandleH {
	background-position:-36px 0;
}
.dbizdemo .dijitSliderProgressBarH .dijitSliderThumbHover{
	background-position:-36px 0;
}
.dbizdemo .dijitSliderProgressBarH .dijitSliderThumbActive{
	background-position:-36px 0;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderImageHandleH,
.dbizdemo .dijitSliderDisabled .dijitSliderImageHandleH {
	background-position:-54px 0;
}
.dbizdemo .dijitSliderImageHandleV {
	border: 0;
	width: 18px;
	height: 16px;
	background-image: url("../@{image-form-slider-thumbs}");
	background-repeat:no-repeat;
	background-position:-289px 0;
}
.dbizdemo .dijitSliderHover .dijitSliderImageHandleV {
	background-position:-307px 0;
}
.dbizdemo .dijitSliderFocused .dijitSliderImageHandleV {
	background-position:-325px 0;
}
.dbizdemo .dijitSliderProgressBarV .dijitSliderThumbHover{
	background-position:-325px 0;
}
.dbizdemo .dijitSliderProgressBarV .dijitSliderThumbActive{
	background-position:-325px 0;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderImageHandleV,
.dbizdemo .dijitSliderDisabled .dijitSliderImageHandleV {
	background-position:-343px 0;
}

/* ---- Increment/Decrement Buttons ---- */

.dbizdemo .dijitSliderButtonContainerH{
	padding: 1px 3px 1px 2px;
}
.dbizdemo .dijitSliderButtonContainerV{
	padding: 3px 1px 2px 1px;
}
.dbizdemo .dijitSliderDecrementIconH,
.dbizdemo .dijitSliderIncrementIconH,
.dbizdemo .dijitSliderDecrementIconV,
.dbizdemo .dijitSliderIncrementIconV {
	background-image: url("../@{image-form-common-arrows}");
	background-repeat:no-repeat;
	background-color: @arrowbutton-background-color;
	.border-radius(2px);
	border: solid 1px @border-color;
	font-size: 1px;
}
.dbizdemo .dijitSliderDecrementIconH,
.dbizdemo .dijitSliderIncrementIconH {
	height: 12px;
	width: 9px;
}
.dbizdemo .dijitSliderDecrementIconV,
.dbizdemo .dijitSliderIncrementIconV {
	height: 9px;
	width: 12px;
}
.dbizdemo .dijitSliderActive .dijitSliderDecrementIconH,
.dbizdemo .dijitSliderActive .dijitSliderIncrementIconH,
.dbizdemo .dijitSliderActive .dijitSliderDecrementIconV,
.dbizdemo .dijitSliderActive .dijitSliderIncrementIconV,
.dbizdemo .dijitSliderHover .dijitSliderDecrementIconH,
.dbizdemo .dijitSliderHover .dijitSliderIncrementIconH,
.dbizdemo .dijitSliderHover .dijitSliderDecrementIconV,
.dbizdemo .dijitSliderHover .dijitSliderIncrementIconV {
	/* dijitSliderActive should be treated as dijitSliderHover since "clicking the slider" has no meaning */
	border: solid 1px @hovered-border-color;
	background-color: @slider-hoveredButton-background-color;
}

.dbizdemo .dijitSliderDecrementIconH {
	background-position:-357px 50%;
}
.dbizdemo .dijitSliderActive .dijitSliderDecrementIconH
.dbizdemo .dijitSliderHover .dijitSliderDecrementIconH {
	background-position:-393px 50%;
}
.dbizdemo .dijitSliderIncrementIconH {
	background-position:-251px 50%;
}
.dbizdemo .dijitSliderActive .dijitSliderIncrementIconH
.dbizdemo .dijitSliderHover .dijitSliderIncrementIconH {
	background-position:-283px 50%;
}
.dbizdemo .dijitSliderDecrementIconV {
	background-position:-38px 50%;
}
.dbizdemo .dijitSliderActive .dijitSliderDecrementIconV
.dbizdemo .dijitSliderHover .dijitSliderDecrementIconV {
	background-position:-73px 50%;
}
.dbizdemo .dijitSliderIncrementIconV {
	background-position:-143px 49%;
}
.dbizdemo .dijitSliderActive .dijitSliderIncrementIconV
.dbizdemo .dijitSliderHover .dijitSliderIncrementIconV {
	background-position:-178px 49%;
}
.dbizdemo .dijitSliderButtonContainerV .dijitSliderDecrementButtonHover,
.dbizdemo .dijitSliderButtonContainerH .dijitSliderDecrementButtonHover,
.dbizdemo .dijitSliderButtonContainerV .dijitSliderIncrementButtonHover,
.dbizdemo .dijitSliderButtonContainerH .dijitSliderIncrementButtonHover {
	background-color: @slider-button-hovered-background-color;
}
.dbizdemo .dijitSliderButtonContainerV .dijitSliderDecrementButtonActive,
.dbizdemo .dijitSliderButtonContainerH .dijitSliderDecrementButtonActive,
.dbizdemo .dijitSliderButtonContainerV .dijitSliderIncrementButtonActive,
.dbizdemo .dijitSliderButtonContainerH .dijitSliderIncrementButtonActive {
	background-color: @slider-button-pressed-background-color;
	border-color:@pressed-border-color;
}
.dbizdemo .dijitSliderButtonInner {
	visibility: hidden;
}
.dbizdemo .dijitSliderDisabled .dijitSliderBar{
	border-color: @disabled-border-color;
}
.dbizdemo .dijitSliderReadOnly *,.dbizdemo .dijitSliderDisabled * {
	border-color: @disabled-border-color;
	color: @disabled-text-color;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderDecrementIconH,
.dbizdemo .dijitSliderDisabled .dijitSliderDecrementIconH {
	background-position:-321px 50%;
	background-color:@disabled-background-color;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderIncrementIconH,
.dbizdemo .dijitSliderDisabled .dijitSliderIncrementIconH {
	background-position:-215px 50%;
	background-color:@disabled-background-color;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderDecrementIconV,
.dbizdemo .dijitSliderDisabled .dijitSliderDecrementIconV {
	background-position:-3px 49%;
	background-color:@disabled-background-color;
}
.dbizdemo .dijitSliderReadOnly .dijitSliderIncrementIconV,
.dbizdemo .dijitSliderDisabled .dijitSliderIncrementIconV {
	background-position:-107px 49%;
	background-color:@disabled-background-color;
}
